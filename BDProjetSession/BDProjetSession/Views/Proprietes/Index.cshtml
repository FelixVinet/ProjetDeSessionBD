@model IEnumerable<BDProjetSession.Models.Propriete>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Propriétés</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomProprio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelProprio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomProprio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelProprio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProprieteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProprieteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProprieteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
